<br>
<div class="login">
<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label:email, class: 'logintexttxt' %><br/>
    <%= f.email_field :email, autofocus: true, class: 'logintext' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'loginpasstxt' %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'loginpass' %>
  </div>
  <br>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'loginbutton' %>
  </div>
  <br>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>
<br>
<%= link_to "Log in with Twitter", user_omniauth_authorize_path(:twitter)%>
<br>
<%= link_to "Log in with Facebook", user_omniauth_authorize_path(:facebook)%>
</div>
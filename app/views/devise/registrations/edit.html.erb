<div class="error">
  <%= devise_error_messages! %>
</div>
<br>
<div class="login">
<h1>Edit User</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
  <div class="field">
    <%= f.label :email, class: 'logintexttxt' %><br />
    <%= f.email_field :email, autofocus: true, class: 'logintext' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: 'loginpasstxt' %><br><i>(Leave blank if you don't want to change it)</i><br/>
    <%= f.password_field :password, autocomplete: "off", class: 'loginpass' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'loginpasstxt' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'loginpass' %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: 'loginpasstxt' %><br><i>(Type your current password to confirm changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'loginpass' %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Update", class: 'loginbutton' %>
  </div>
<% end %>
<br>
<h1>Cancel my account</h1>

<p>Unhappy?</p>
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'loginbutton' %>
<br>
<%= link_to "Back", :back %>
</div>

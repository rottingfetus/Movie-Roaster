<div class="error">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
</div>
<br>
<div class="login">
<h1>Sign up</h1>

  <div class="field">
    <%= f.label :email, class: 'logintexttxt' %><br />
    <%= f.email_field :email, autofocus: true, class: 'logintext' %>
  </div>
<% if f.object.password_required? %>
  <div class="field">
    <%= f.label :password, class: 'loginpasstxt' %>
    <br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'loginpass' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'loginpasstxt' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'loginpass' %>
  </div>
  <br>
<% end %>
  <div class="actions">
    <%= f.submit "Sign up", class: 'loginbutton' %>
  </div>
<% end %>

</div>